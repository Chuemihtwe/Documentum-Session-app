<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [ %-5level ] [%thread] [$${ctx:username:-Anonymous} - $${ctx:ipAddress:-0.0.0.0}] %logger{80} - %msg%n%throwable" />
        </Console>

        <!-- File Appender -->
        <!--        <File name="LogToFile" fileName="logs/application.log">-->
        <!--            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />-->
        <!--        </File>-->
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
