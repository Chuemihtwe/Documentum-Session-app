<?xml version="1.0" encoding="UTF-8"?>
<included>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <property name="LOG_DIR" value="${catalina.home:-.}/logs"/>
    <property name="CHARSET" value="UTF-8"/>
    <property name="SIMPLE_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [ %-5level ] [%thread] [%mdc{username:-Anonymous} - %mdc{ipAddress:-0.0.0.0}] %logger{80} - %msg%n%throwable"/>
    <property name="NORMAL_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [ %-5level ] [%thread] %logger{80} - %msg%n%throwable"/>
    <property name="DETAIL_PATTERN" value="${CONSOLE_LOG_PATTERN:-%d{yyyy-MM-dd HH:mm:ss.SSS} [%mdc{requestId:-00000000-0000-0000-0000-000000000000}] [ %-5level ] [%thread] [${PID:-0} - %mdc{sessionId:-0}] [%mdc{username:-Anonymous} - %mdc{ipAddress:-0.0.0.0}] [%logger{40} %file:%line] - %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

    <appender name="CONSOLE_SIMPLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern charset="${CHARSET}">${SIMPLE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- Console Appender -->
    <appender name="CONSOLE_DETAIL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${DETAIL_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/app-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${SIMPLE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <!-- Client Rolling File Appender -->
    <appender name="CLIENT_ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/client.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/client-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${SIMPLE_PATTERN}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>
</included>
